@model JCold_UVU_MVC_Inventory.Models.CheckOutBook

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>CheckOutBook</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Books.Title), ISBN, Number
        </dt>

        <dd>
            Title:
            @Html.DisplayFor(model => model.Books.Title),
            ISBN:
            @Html.DisplayFor(model => model.Books.ISBN),
            #@Html.DisplayFor(Model => Model.Books.Number),
            Class Room:
            @Html.DisplayFor(Model => Model.Books.ClassRoom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Department.DepName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.DepName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Students.StudentName), UVU ID, Email
        </dt>

        <dd>
            Name:
            @Html.DisplayFor(model => model.Students.StudentName),
            UVUID:
            @Html.DisplayFor(model => model.Students.UVUID),
            Email:
            @Html.DisplayFor(model => model.Students.StudentEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReturnedBook)
        </dt>

        <dd>
            @if (Model.ReturnedBook)
            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DueDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReturnedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReturnedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CheckedOutDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CheckedOutDate)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Edit", "CheckOutBooks", new { id = Model.CheckOutBookID })" style="color: black" class="btn btn-sm btn-light">Edit</a>
    <a href="@Url.Action("Index", "CheckOutBooks", new { id = Model.CheckOutBookID })" style="color: black" class="btn btn-sm btn-light">Back To List</a>
</p>
