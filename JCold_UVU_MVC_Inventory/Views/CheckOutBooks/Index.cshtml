@model IEnumerable<JCold_UVU_MVC_Inventory.Models.CheckOutBook>
@using GridMvc.Html

@{
    ViewBag.Title = "Book Check Out";
}

<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/gridmvc.min.js"></script>
<link href="~/Content/Gridmvc.css" rel="stylesheet" />

<h2><i class="fa fa-lg fa-calendar-check-o"></i> Check out Books</h2>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Filter
</button>

<!-- Filter Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Filter Values</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<p>
    <a href="@Url.Action("Create", "CheckOutBooks")" style="color: white" class="btn btn-primary">Check out</a>
</p>

@Html.Grid(Model).Columns(columns =>
     {
         columns.Add(c => c.BooksID).Titled("Book").Filterable(true);
         columns.Add(c => c.DepartmentID).Titled("Department").Filterable(true);
         columns.Add(c => c.StudentsID).Titled("Student");
         columns.Add(c => c.ReturnedBook).Titled("Returned");
         columns.Add(c => c.DueDate).Titled("Due-Date").Filterable(true);
         columns.Add(c => c.ReturnedDate).Titled("Returned-Date").Filterable(true);
         columns.Add(c => c.CheckedOutDate).Titled("Checked-out-Date");

     })


<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Books.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.DepName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Students.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnedBook)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckedOutDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Books.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Students.StudentName)
            </td>

            <td>
                @if (@item.ReturnedBook)
                {
                    <i class="fa fa-lg fa-check-circle" style="color: forestgreen"></i>
                }
                else
                {
                    <i class="fa fa-lg fa-times-circle" style="color: darkgoldenrod"></i>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckedOutDate)
            </td>
            <td>
                <a href="@Url.Action("Edit", "CheckOutBooks", new { id = item.CheckOutBookID })" style="color: black" class="btn btn-sm btn-light">Edit</a>
                <a href="@Url.Action("Details", "CheckOutBooks", new { id = item.CheckOutBookID })" style="color: black" class="btn btn-sm btn-light">Details</a>
                <a href="@Url.Action("Delete", "CheckOutBooks", new { id = item.CheckOutBookID })" style="color: black" class="btn btn-sm btn-light">Delete</a>
            </td>
        </tr>
    }

</table>
