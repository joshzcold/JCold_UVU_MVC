@model IEnumerable<JCold_UVU_MVC_Inventory.Models.CheckOutSupplies>

@{
    ViewBag.Title = "Check out Supplies";
}

<h2><i class="fa fa-lg fa-calendar-check-o"></i> Check out Supplies</h2>

<br />
<br />
<p>
    <a href="@Url.Action("Create", "CheckOutSupplies")" style="color: white" class="btn btn-primary">Check out</a>
    <a href="@Url.Action("Filter", "CheckOutSupplies")" style="color: white" class="btn btn-primary">Filter</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Department.DepName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Students.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplies.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnedSupply)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckedOutDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Department.DepName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Students.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supplies.Name)
        </td>
        <td>
            @if(@item.ReturnedSupply) {
                <i class="fa fa-lg fa-check-circle" style="color: forestgreen"></i>
                }
                else {
                <i class="fa fa-lg fa-times-circle" style="color: darkgoldenrod"></i>
                }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReturnedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckedOutDate)
        </td>
        <td>
            <a href="@Url.Action("Edit", "CheckOutSupplies", new { id = item.CheckOutSuppliesID })" style="color: black" class="btn btn-sm btn-light">Edit</a>
            <a href="@Url.Action("Details", "CheckOutSupplies", new { id = item.CheckOutSuppliesID })" style="color: black" class="btn btn-sm btn-light">Details</a>
            <a href="@Url.Action("Delete", "CheckOutSupplies", new { id = item.CheckOutSuppliesID })" style="color: black" class="btn btn-sm btn-light">Delete</a>
        </td>
    </tr>
}

</table>
